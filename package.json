{
  "name": "tinkercad-qhl",
  "version": "1.2.5",
  "main": "index.js",
  "date": "2025-02-01",
  "scripts": {
    "test": "node --test test/utils.test.js test/pythonUtils.test.js",
    "start": "electron .",
    "start:debug": "cross-env TINKERCAD_DEBUG=1 electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win zip",
    "build:win:debug": "node scripts/set-debug-mode.js true && electron-builder --win zip && node scripts/set-debug-mode.js false",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win zip --linux zip",
    "monitor-microbit": "node scripts/monitor_microbit_drive.js"
  },
  "keywords": [],
  "author": "Sébastien Canet",
  "license": "CC0-1.0",
  "type": "commonjs",
  "description": "Application desktop Tinkercad QHL — compilation et téléversement Arduino et micro:bit",
  "repository": "github:LibrEduc/TinkercadOffline",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.tinkercad.desktop",
    "productName": "Tinkercad QHL",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "defaultArch": "x64",
      "icon": "assets/autodesk-tinkercad.png",
      "executableName": "Tinkercad QHL",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ],
      "category": "Education",
      "icon": "assets/autodesk-tinkercad.png",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.education",
      "icon": "assets/autodesk-tinkercad.png",
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}"
    },
    "extraResources": [
      {
        "from": "arduino",
        "to": "../arduino",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "microbit",
        "to": "../microbit",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "../assets",
        "filter": [
          "*.svg",
          "*.png"
        ]
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "dependencies": {
    "@microbit/microbit-fs": "^0.10.0",
    "electron-prompt": "^1.7.0"
  }
}
